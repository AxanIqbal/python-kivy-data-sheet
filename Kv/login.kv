#:import MDLabel kivymd.label.MDLabel

<ThemedMessage@Label>:
    bg_color: (0,0,0,1) #app.login_primary_color[:3] + [.7] if type(app.login_primary_color) != tuple else app.login_primary_color[:3] + tuple([.7])
    #color: app.login_secondary_color
    text_size: self.size
    padding: 15, 0
    halign: "left"
    valign: "center"

    canvas.before:
        Color:
            rgba: self.bg_color if self.bg_color else (0,0,0,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: 0,


<LogIn>:
    name: "login"
    web_api_key: "AIzaSyDYcE9v683M5UFY24_KiCmN95CtoEMzsXk"
    tertiary_color: 1, 0, 0, 1
	canvas:
		Rectangle:
			source: 'Image/test2.jpg'
        	size: root.width, root.height

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: self.minimum_size
        spacing: dp(10)
        pos_hint: {'center_x': .5, 'top': .8}


    	MDTextFieldRound:
        	id: login_username
        	hint_text: "username"
            max_lines: 1
            valign: 'middle'
            halign: 'center'
            font_size: 15
            multiline: False
            on_text_validate: root.validate();

        MDTextFieldRound:
        	id: login_password
        	hint_text: "password"
        	max_lines: 1
        	valign: 'middle'
        	halign: 'center'
        	font_size: 15
        	multiline: False
        	password: True
            icon_type: 'all'
            icon_left: 'key-variant'
            icon_right: 'eye-off'
            icon_right_dasabled: False
            icon_callback: root.show_password

    CheckBox:
        id: rempass
        size_hint: None,None
        size: 10, 10
        top: (root.top/2)+50
        pos: ((root.width/2) + 50, (root.top/2))

    MDLabel:
        text: "Save Password"
        pos_hint: {'center_x': 0.9}
        y: rempass.height - dp(5)
        color: 1, 1, 1, 1

    MDFillRoundFlatButton:
    	font_size: 18
    	background_color: (1,1,1,0.1)
    	text: "Login"
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
    	on_release: 
            root.sign_in(login_username.text,login_password.text)
            Animation(opacity=0, duration=0.5).start(message)
            root.display_loading_screen()


    MDLabel:
        text: "Powered By Ahsan Iqbal"
        halign: 'center'
        size_hint_y: None

    
    ThemedMessage:
        id: message
        size_hint: .9 ,.1
        pos_hint: {"center_x": .5, "center_y": .1}
        opacity: 0
        on_text:
            Animation(opacity=1, duration=0.5).start(self)
        