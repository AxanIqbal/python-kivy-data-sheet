#:import MDLabel kivymd.label.MDLabel

<LogIn>:
    name: "login"
	canvas:
		Rectangle:
			source: 'Image/test2.jpg'
        	size: root.width, root.height

	MDTextFieldRound:
    	id: login_username
    	center_x: (root.width/2) 
    	top: (root.top/2)+ 150
    	size_hint: None,None
    	hint_text: "username"
        size: 250, 35
        max_lines: 1
        valign: 'middle'
        halign: 'center'
        font_size: 15
        multiline: False
        on_text_validate: root.validate();

    MDTextFieldRound:
    	id: login_password
        y: login_username.height - dp(5)
    	size_hint: None,None
    	center_x: (root.width/2) 
    	hint_text: "password"
    	size: 250, 35
    	max_lines: 1
    	valign: 'middle'
    	halign: 'center'
    	font_size: 15
    	multiline: False
    	password: True
        icon: 'lock-outline'

    CheckBox:
        id: rempass
        size_hint: None,None
        size: 200, 10
        center_x: (root.width/2)+60
        top: (root.top/2)+50
        pos: ((root.width/2), (root.top/2))

    MDLabel:
        text: "Save Password"
        size_hint: None,None
        center_x: (root.width/2)-5
        top: (root.top/2)+50

    Button:
    	size_hint: (0.13, 0.07)
    	center_x: (root.width/2)-50
    	top: (root.top/2)-15
    	size: 90,35
    	pos: 350, 200
    	font_size: 18
    	background_color: (1,1,1,0.1)
    	text: "Forgot"
        on_release: root.log_in()
        pos_hint: {'center_x': 0.43, 'center_y': 0.4}

    Button:
    	size_hint: (0.13, 0.07)
    	center_x: (root.width/2)+50
    	top: (root.top/2)-15
    	size: 90,35
    	pos: 350, 200
    	font_size: 18
    	background_color: (1,1,1,0.1)
    	text: "Login"
        pos_hint: {'center_x': 0.58, 'center_y': 0.4}
    	on_release: app.change_screen("MainFrame")


    MDLabel:
        text: "Powered By Ahsan Iqbal"
        halign: 'center'
        size_hint_y: None
        